<?xml version="1.0" encoding="UTF-8"?>
<routes xmlns="http://camel.apache.org/schema/spring" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://camel.apache.org/schema/spring http://camel.apache.org/schema/spring/camel-spring.xsd">

    <route id="mc_to_esp">
        <from uri="kafka:mc.from?groupId=mc_consumers"/>
        <log message="${headers} ${body}" loggingLevel="DEBUG"/>

        <doTry>
            <log message="Unmarshalling message from XML to POJO ..." loggingLevel="DEBUG"/>
            <unmarshal><jacksonxml/></unmarshal>
            <log message="Successfully unmarshalled message" loggingLevel="DEBUG"/>

            <log message="Transforming message ..." loggingLevel="DEBUG"/>
            <transform>
                <groovy>
                    def newBody = request.body
                    newBody['opcode'] = 'P'
                    return newBody
                </groovy>
            </transform>
            <log message="${headers} ${body}" loggingLevel="DEBUG"/>

            <to uri="{{mc.esp.uri}}"/>

            <doCatch>
                <exception>java.lang.Exception</exception>
                <log message="ERROR: ${exception}: ${headers} - ${body}" loggingLevel="ERROR"/>
            </doCatch>
        </doTry>
    </route>
</routes>